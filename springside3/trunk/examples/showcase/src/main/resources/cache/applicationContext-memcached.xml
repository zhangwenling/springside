<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- SpyMemcached客户端 -->
	<bean id="spyClient" class="org.springside.modules.memcached.SpyMemcachedClientWrapper">
		<!-- 设置Memcached集群 -->
		<property name="memcachedNodes" value="localhost:11211" />
		<!-- 缩短Timeout时间到200毫秒 -->
		<property name="operationTimeout" value="200" />
	</bean>

	<!-- 嵌入式的Memcached服务器, 仅在测试或演示时使用 -->
	<bean class="org.springside.modules.memcached.JmemcachedFactory" lazy-init="false" />
</beans>